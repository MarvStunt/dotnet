@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div style="display: flex; align-items: center; justify-content: center; min-height: calc(100vh - 200px); padding: 2rem;">
    <div style="max-width: 500px; width: 100%;">
        <section>
            <h2 style="color: #ffffff; font-weight: 700; margin-bottom: 1.5rem; font-size: 1.8rem; text-align: center;">Create a new account.</h2>
            <hr style="border-color: #2d2d4d; margin-bottom: 2rem;" />
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" style="color: #ef4444; margin-bottom: 1rem;"></div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" style="color: #ef4444; font-size: 0.875rem; margin-top: 0.25rem; display: block;"></span>
                </div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" style="color: #ef4444; font-size: 0.875rem; margin-top: 0.25rem; display: block;"></span>
                </div>
                
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" style="color: #ef4444; font-size: 0.875rem; margin-top: 0.25rem; display: block;"></span>
                </div>
                
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary" style="padding: 12px 20px; margin-bottom: 2rem;">Register</button>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

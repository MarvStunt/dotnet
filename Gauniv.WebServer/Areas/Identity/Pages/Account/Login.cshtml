@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div style="display: flex; align-items: center; justify-content: center; min-height: calc(100vh - 200px); padding: 2rem;">
    <div style="max-width: 500px; width: 100%;">
        <section>
            <h2 style="color: #ffffff; font-weight: 700; margin-bottom: 1.5rem; font-size: 1.8rem; text-align: center;">Use a local account to log in.</h2>
            <hr style="border-color: #2d2d4d; margin-bottom: 2rem;" />
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" style="color: #ef4444; margin-bottom: 1rem;"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username"
                        aria-required="true" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email"
                        style="color: #ef4444; font-size: 0.875rem; margin-top: 0.25rem; display: block;"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password"
                        aria-required="true" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password"
                        style="color: #ef4444; font-size: 0.875rem; margin-top: 0.25rem; display: block;"></span>
                </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    <label class="form-check-label" asp-for="Input.RememberMe">
                        Remember me
                    </label>
                </div>

                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary"
                    style="padding: 12px 20px; margin-bottom: 2rem;">Log in</button>
            </form>

            <div style="display: flex; flex-direction: column; gap: 0.75rem;">
                <p style="margin-bottom: 0;">
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"
                        style="color: #4c6ef5; text-decoration: none; font-weight: 500;">Register as a new user</a>
                </p>
            </div>
        </section>
    </div>
</div>
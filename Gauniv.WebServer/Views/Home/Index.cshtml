@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<Gauniv.WebServer.Data.Game>
@{
    ViewData["Title"] = "Boutique de Jeux";
}

<div class="store-page">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container">
            <h1 class="hero-title">Discover Games</h1>
            <p class="hero-subtitle">Browse through our collection of amazing games</p>
        </div>
    </div>

    <div class="container store-container">
        <!-- Search Bar -->
        <div class="search-section">
            <form method="get" asp-action="Index">
                <div class="search-wrapper">
                    <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor">
                        <circle cx="11" cy="11" r="8"></circle>
                        <path d="m21 21-4.35-4.35"></path>
                    </svg>
                    <input type="text" class="search-input" name="search" value="@ViewBag.Search" placeholder="Search by name...">
                </div>

                <!-- Filters Row 1: Category, Price Range, File Size -->
                <div class="filters-row">
                    <div class="filter-group">
                        <label class="filter-label">📁 Category</label>
                        <select class="filter-select" name="categoryId" onchange="this.form.submit()">
                            <option value="">All Categories</option>
                            @foreach (var category in (List<Gauniv.WebServer.Data.Category>)ViewBag.Categories)
                            {
                                <option value="@category.Id" selected="@(ViewBag.CategoryId == category.Id)">@category.Name</option>
                            }
                        </select>
                    </div>

                    <div class="filter-group">
                        <label class="filter-label">💰 Min Price</label>
                        <input type="number" class="filter-input" name="minPrice" value="@ViewBag.MinPrice" placeholder="0" step="0.01" min="0">
                    </div>

                    <div class="filter-group">
                        <label class="filter-label">💰 Max Price</label>
                        <input type="number" class="filter-input" name="maxPrice" value="@ViewBag.MaxPrice" placeholder="999" step="0.01" min="0">
                    </div>

                    <div class="filter-group">
                        <label class="filter-label">📦 File Size (KB)</label>
                        <input type="number" class="filter-input" name="minSize" value="@ViewBag.MinSize" placeholder="Min" step="1" min="0">
                    </div>
                </div>

                <!-- Filters Row 2: Owned Status & Apply Button -->
                <div class="filters-row" style="align-items: flex-end;">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="filter-group">
                            <label class="filter-label">📦 Possession</label>
                            <select class="filter-select" name="owned">
                                <option value="">All Games</option>
                                <option value="true" selected="@(ViewBag.Owned == true)">My Games Only</option>
                                <option value="false" selected="@(ViewBag.Owned == false)">Not Owned</option>
                            </select>
                        </div>
                    }

                    <div class="filter-group" style="flex: 0 0 auto;">
                        <button type="submit" class="btn-filter-apply">
                            🔍 Apply Filters
                        </button>
                    </div>

                    <div class="filter-group" style="flex: 0 0 auto;">
                        <a href="@Url.Action("Index")" class="btn-filter-reset">
                            ✕ Reset
                        </a>
                    </div>
                </div>
            </form>
        </div>

        <!-- Games Grid -->
        @if (Model.Any())
        {
            <div class="games-grid">
                @foreach (var game in Model)
                {
                    <div class="game-card-modern">
                        <div class="game-card-image">
                            <div class="game-card-placeholder">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <rect x="3" y="3" width="18" height="18" rx="2"></rect>
                                    <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                    <path d="m21 15-5-5L5 21"></path>
                                </svg>
                            </div>
                            <img src="https://picsum.photos/seed/@game.Id/600/400" alt="@game.Name"
                                 onload="this.previousElementSibling.style.display='none'"
                                 onerror="this.style.display='none'; this.previousElementSibling.style.display='flex';" />
                            @if (game.Price > 0)
                            {
                                <div class="game-card-discount">-25%</div>
                            }
                        </div>
                        <div class="game-card-info">
                            <h3 class="game-card-title">@game.Name</h3>
                            <p class="game-card-description">
                                @(game.Description.Length > 80 ? game.Description.Substring(0, 80) + "..." : game.Description)
                            </p>
                            <div class="game-card-price">
                                @game.Price.ToString("C")
                            </div>
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                var isOwned = ((HashSet<int>)ViewBag.OwnedGameIds).Contains(game.Id);
                                if (isOwned)
                                {
                                    <div class="game-card-owned">
                                        <span>✅ Owned</span>
                                        <a asp-action="MyGames" class="btn-secondary">
                                            View in Library
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    <button class="btn-purchase" onclick="purchaseGame(@game.Id, '@game.Name')">
                                        💳 Buy
                                    </button>
                                }
                            }
                            else
                            {
                                <a asp-area="Identity" asp-page="/Account/Login" class="btn-purchase">
                                    🔐 Login Required
                                </a>
                            }
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="no-games-found">
                <h3>😕 No games found</h3>
                <p>Try adjusting your search filters.</p>
            </div>
        }

        <!-- Pagination -->
        @if (Model.PageCount > 1)
        {
            <div class="pagination-container">
                <nav aria-label="Page navigation" class="pagination-nav">
                    <ul class="pagination-list">
                        @if (Model.HasPreviousPage)
                        {
                            <li class="pagination-item">
                                <a class="pagination-link pagination-link-prev" 
                                   href="@Url.Action("Index", new { page = Model.PageNumber - 1, search = ViewBag.Search, categoryId = ViewBag.CategoryId, minPrice = ViewBag.MinPrice, maxPrice = ViewBag.MaxPrice, minSize = ViewBag.MinSize, owned = ViewBag.Owned })">
                                    ← Previous
                                </a>
                            </li>
                        }

                        @for (int i = Math.Max(1, Model.PageNumber - 2); i <= Math.Min(Model.PageCount, Model.PageNumber + 2); i++)
                        {
                            <li class="pagination-item">
                                @if (i == Model.PageNumber)
                                {
                                    <span class="pagination-link pagination-link-active">@i</span>
                                }
                                else
                                {
                                    <a class="pagination-link" 
                                       href="@Url.Action("Index", new { page = i, search = ViewBag.Search, categoryId = ViewBag.CategoryId, minPrice = ViewBag.MinPrice, maxPrice = ViewBag.MaxPrice, minSize = ViewBag.MinSize, owned = ViewBag.Owned })">
                                        @i
                                    </a>
                                }
                            </li>
                        }

                        @if (Model.HasNextPage)
                        {
                            <li class="pagination-item">
                                <a class="pagination-link pagination-link-next" 
                                   href="@Url.Action("Index", new { page = Model.PageNumber + 1, search = ViewBag.Search, categoryId = ViewBag.CategoryId, minPrice = ViewBag.MinPrice, maxPrice = ViewBag.MaxPrice, minSize = ViewBag.MinSize, owned = ViewBag.Owned })">
                                    Next →
                                </a>
                            </li>
                        }
                    </ul>
                </nav>

                <div class="pagination-info">
                    Showing page <strong>@Model.PageNumber</strong> of <strong>@Model.PageCount</strong> 
                    (Total: <strong>@Model.TotalItemCount</strong> games)
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        async function purchaseGame(gameId, gameName) {
            const result = await Swal.fire({
                title: 'Confirmer l\'achat',
                text: `Voulez-vous vraiment acheter "${gameName}" ?`,
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#198754',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '💳 Acheter',
                cancelButtonText: 'Annuler'
            });

            if (!result.isConfirmed) return;

            try {
                const response = await fetch(`/api/1.0.0/games/PurchaseGame?id=${gameId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    credentials: 'include'
                });

                const data = await response.json();

                if (response.ok) {
                    await Swal.fire({
                        title: 'Succès !',
                        text: data.message,
                        icon: 'success',
                        confirmButtonColor: '#198754'
                    });
                    location.reload();
                } else {
                    Swal.fire({
                        title: 'Erreur',
                        text: data.message || 'Erreur lors de l\'achat',
                        icon: 'error',
                        confirmButtonColor: '#dc3545'
                    });
                }
            } catch (error) {
                Swal.fire({
                    title: 'Erreur',
                    text: 'Erreur de connexion au serveur',
                    icon: 'error',
                    confirmButtonColor: '#dc3545'
                });
                console.error(error);
            }
        }
    </script>
}
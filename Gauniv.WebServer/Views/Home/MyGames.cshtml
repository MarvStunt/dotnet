@model List<Gauniv.WebServer.Data.Game>
@{
    ViewData["Title"] = "Mes Jeux";
}

<div class="store-page">
    <!-- Hero Section -->
    <div class="hero-section">
        <div class="container">
            <h1 class="hero-title">Ma Biblioth√®que</h1>
            <p class="hero-subtitle">Vous poss√©dez @Model.Count jeu(x)</p>
        </div>
    </div>

    <div class="container store-container">
        @if (Model.Any())
        {
            <div class="games-grid">
                @foreach (var game in Model)
                {
                    <div class="game-card-modern">
                        <div class="game-card-image">
                            <div class="game-card-placeholder">
                                <svg viewBox="0 0 24 24" fill="none" stroke="currentColor">
                                    <rect x="3" y="3" width="18" height="18" rx="2"></rect>
                                    <circle cx="8.5" cy="8.5" r="1.5"></circle>
                                    <path d="m21 15-5-5L5 21"></path>
                                </svg>
                            </div>
                        </div>
                        <div class="game-card-info">
                            <h3 class="game-card-title">@game.Name</h3>
                            <p class="game-card-description">
                                @(game.Description.Length > 80 ? game.Description.Substring(0, 80) + "..." : game.Description)
                            </p>
                            <div class="game-card-categories">
                                @foreach (var gc in game.GameCategories)
                                {
                                    <span class="category-badge">@gc.Category.Name</span>
                                }
                            </div>
                            <div class="game-card-footer">
                                <div class="game-card-price">
                                    @game.Price.ToString("C")
                                </div>
                                <span class="game-card-size">üì¶ @(game.Payload.Length / 1024) KB</span>
                            </div>
                            <a href="/api/1.0.0/games/@game.Id/download" class="btn-purchase" style="display: block; text-align: center;">
                                ‚¨áÔ∏è T√©l√©charger
                            </a>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="no-games-found">
                <h3>üòï Vous ne poss√©dez aucun jeu</h3>
                <p>Rendez-vous dans la <a asp-action="Index" style="color: #4c6ef5; text-decoration: none; font-weight: 600;">boutique</a> pour acheter vos premiers jeux !</p>
            </div>
        }
    </div>
</div>
